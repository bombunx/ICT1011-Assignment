void drawBitmap(uint8_t button) {

  if (!button) {
    if (menu_debug_print)SerialMonitorInterface.println("viewSpriteInit");
    currentDisplayState = displayStateMenu;
    display.clearWindow(0, 12, 96, 64);
    display.setFont(font10pt);
    display.fontColor(defaultFontColor, defaultFontBG);

    displayBitmap();
    char backStr[] = "Back >";
    int Xpos = 95 - display.getPrintWidth(backStr);
    display.setCursor(Xpos, menuTextY[3]);
    display.print(backStr);
    } else {
    if (button == clearButton) {//actually back?
      display.clearScreen();
      currentDisplayState = displayStateHome;
      initHomeScreen();
    }
  }
}


void displayBitmap(){
      //set a background that matches
    display.drawRect(0, 0, 96, 64, TSRectangleFilled, TS_16b_Blue);
    //let's set up for a bitmap at (40,30) that is 17 pixels wide and 12 pixels tall:
    //setX(x start, x end);//set OLED RAM to x start, wrap around at x end
    display.setX(40, 40 + 13 - 1);
    //setY(y start, y end)  ;//set OLED RAM to y start, wrap around at y end
    display.setY(30, 30 + 13 - 1);
    //now start a data transfer
    display.startData();
    //writeBuffer(buffer,count);//optimized write of a large buffer of 8 bit data.
    display.writeBuffer(bunnyBitmap, 13 * 13);
    display.endTransfer();
}